extends ../layouts/default
include ../helpers/mixins

block variables
    - const title = "Главная"

block content
    section.pageBanner.without-description
        .inner
            picture.pageBanner__bg
                //source(srcset="../img/projects/banner.webp" type="image/webp")
                img(src="../img/projects/banner.jpg", alt="Баннер")
            .pageBanner__content
                h1.pageBanner__title Проекты и отзывы
            .breadcrumbs
                    a(href='https://nerta-sw.ru') Главная
                    span Проекты
    section.projects
        .inner
            .projects__items
                .projects__item
                    .image
                        img(src="../img/projects/1.jpg", alt="" loading="lazy")
                    .name 7 из 14 моек самообслуживания в Пскове работают на оборудовании “Нерта”
                    .list
                        .list-item
                            .desc Чистая прибыль за год
                            .value 2 миллиона рублей
                        .list-item
                            .desc Средняя выручка в месяц
                            .value 700 тысяч рублей
                    .more
                        a(href="project-detail.html") Узнать подробнее
                .projects__item
                    .image
                        img(src="../img/projects/2.jpg", alt="" loading="lazy")
                    .name Красная Мойка, г. Реутов
                    .list
                        .list-item
                            .desc Чистая прибыль за год
                            .value 2 миллиона рублей
